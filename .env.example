# ============== Autenticación ==============
# Clave secreta para cifrar las sesiones del navegador (genera una clave aleatoria)
SECRET_KEY=tu_clave_secreta_aleatoria
# Contraseña para acceder al panel CRM
LOGIN_PASSWORD=tu_contraseña

# ============== Webhook ==============
# Token de verificación que configuraste en Meta (tú lo inventas, ej: "mi_token_secreto")
VERIFY_TOKEN=tu_token_verificacion

# URL de tu Chatwoot donde se recibirán los mensajes
# Por lo general es algo como: https://tu-chatwoot.com/webhooks/whatsapp/numero_telefono
CHATWOOT_WEBHOOK_URL=https://app.chatwoot.com/webhooks/whatsapp

# Puerto del servidor (Dokploy usará 5000 internamente)
PORT=5000

# URL de conexión a PostgreSQL (Supabase)
DATABASE_URL=postgresql://postgres:PASSWORD@db.xxx.supabase.co:5432/postgres

# ============== WhatsApp Business API ==============
# Token de acceso permanente de Meta Business (Sistema de usuario)
WHATSAPP_API_TOKEN=tu_token_de_meta

# ID de tu cuenta de WhatsApp Business (lo encuentras en Meta Business Suite > Configuración > API de WhatsApp)
WHATSAPP_BUSINESS_ACCOUNT_ID=123456789012345

# ID del número de teléfono (necesario para enviar mensajes)
WHATSAPP_PHONE_NUMBER_ID=123456789012345
